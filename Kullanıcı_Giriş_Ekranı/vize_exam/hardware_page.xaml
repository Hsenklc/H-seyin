<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="vize_exam.hardware_page"
             Title="hardware_page">

    <ContentPage Title="Flash Tool">
        <ScrollView>
            <VerticalStackLayout>

                <Button Margin="0,0,0,20"
                        BackgroundColor="Green"
                        Text="Open The Flash"
                        Clicked="Button_Clicked"
                        />

            </VerticalStackLayout>
        </ScrollView>
    </ContentPage>

    <ContentPage Title="Vibration Tool">
        <ScrollView>
            <VerticalStackLayout>

                <Button Margin="0,0,0,20"
                        BackgroundColor="Green"
                        Text="Open The Vibration"
                        Clicked="Button_Clicked_1"
                        />

            </VerticalStackLayout>
        </ScrollView>
    </ContentPage>

    <ContentPage Title="Battery information">
        <ScrollView>
            <VerticalStackLayout>

                <Button Margin="0,0,0,20"
                        BackgroundColor="Green"
                        Text="Battery Ä°nformation"
                        Clicked="Button_Clicked_2"
                        />

            </VerticalStackLayout>
        </ScrollView>
    </ContentPage>

    <ContentPage Title="Device Information">
        <ScrollView>
            <VerticalStackLayout>

                <Button Margin="0,0,0,20"
                        BackgroundColor="Green"
                        Text="Device Information"
                        Clicked="Button_Clicked_3"
                        />

            </VerticalStackLayout>
        </ScrollView>
    </ContentPage>
</TabbedPage>